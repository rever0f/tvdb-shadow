<h1>Search TVDB</h1>

<div class='search-left search-content' >
  <%= render 'form', search: @search %>

  <% if @aquery != '' %>
    <div class='search-result' >
      search returned x results
    </div>
    <div class='search-right search-data' >
      <p><%= @aquery %> has been searched <%= @count %> times</p>
    </div>
  <% end %>
</div>

<div class='search-right search-history' >
  <% @baseTo = new_search_path + '?query=' %>
  <% @baseSort = @baseTo + @aquery + '&sort=' %>
  <div class = 'search-recents-sort' >
    sort by -
    <% @sortopts.each do | sort | %>
      <span>
        <a href=<%= new_search_path(query: @aquery, sort: sort) %> >
          <%= sort %>
        </a>&nbsp
      </span>
    <% end %>
  </div>
  <% @recents.each do | recent | %>
    <div class='search-recent' >
      <%= form_tag "/searches" do %>
        <%= hidden_field_tag 'search[query]', recent %>
        <%= submit_tag recent %>
      <% end %>
    </div>
  <% end %>
</div>

</div>

<%# link_to 'Back', searches_path %>
